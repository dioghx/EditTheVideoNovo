<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:andrpod="http://schemas.android.com/tools"
    android:id="@+id/LayoutProfissional"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
   >


    <ImageView
        android:id="@+id/imageProfissional"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="47dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNomeProfissional"
        android:textColor="#FFFFFF"
        android:layout_weight="0.10"
        android:layout_below="@+id/ratingBarProfissional"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewDescricaoProfissional"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.10"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/textViewNomeProfissional"
        android:layout_alignParentStart="true" />



        <RatingBar
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/ratingBarProfissional"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageProfissional"
            android:theme="@style/RatingBarExibicao" />


</RelativeLayout>