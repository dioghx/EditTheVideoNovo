<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#1C86EE"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_height="30dp"
        android:layout_width="200dp"
        android:text="Usuario"
        android:textAlignment="center"
        android:textSize="25sp"
        android:id ="@+id/textViewCadastrarUsuario"
        android:layout_marginTop="22dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textViewCadastrarFreelancer" />

    <ImageButton
        android:id="@+id/imageButtonCadastrarUsuario"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_weight="0.14"
        android:background="@drawable/user"
        android:layout_below="@+id/textViewCadastrarUsuario"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_height="30dp"
        android:layout_width="200dp"
        android:textAlignment="center"
        android:text="Freelancer"
        android:textSize="25sp"
        android:id ="@+id/textViewCadastrarFreelancer"
        android:layout_above="@+id/imageButtonCadastrarFreelancer"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/imageButtonCadastrarFreelancer"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_weight="0.14"
        android:background="@drawable/freelancer"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/imageButtonCadastrarUsuario" />

    <TextView
        android:layout_height="30dp"
        android:layout_width="200dp"
        android:textAlignment="center"
        android:text="Empresa"
        android:textSize="25sp"
        android:id ="@+id/textViewCadastrarEmpresa"
        android:layout_above="@+id/imageButtonCadastrarEmpresa"
        android:layout_alignStart="@+id/textViewCadastrarFreelancer" />

    <ImageButton
        android:id="@+id/imageButtonCadastrarEmpresa"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_weight="0.14"
        android:background="@drawable/freelancer"
        android:layout_marginBottom="27dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageButtonCadastrarFreelancer" />
</RelativeLayout>